<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    tools:context="com.fpt.fragment.FragmentDietas">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dietas"
        android:textColor="#000000"
        android:textSize="32sp"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Las dietas desempeñan un papel fundamental, una dieta equilibrada y adecuada puede ser la clave para mejorar la salud, alcanzar un peso saludable y aumentar la energía. Estas dietas son recomendadas por nutriólogos especializados del IPN"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/tvImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="Descripción de la imagen"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/recyclerView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:ignore="MissingClass" />

</LinearLayout>
