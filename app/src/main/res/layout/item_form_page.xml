<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:text="Configura tu perfil"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Para comenzar, calcularemos tu IDR o tu ingesta diaria de calorías.
La cantidad de calorías calculada se basa en tus objetivos, tu nivel nutricional, tu estatura y actividad física.
Tu salud es lo más importante, juntos cumpliremos los objetivos"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tvImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tvAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/deficit"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground" />

</RelativeLayout>

