<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="¿Cuál es tu objetivo?"
        android:textColor="#000000"
        android:textSize="30sp" />

    <RadioButton
        android:id="@+id/radioPerderPeso"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/green_bordersolid"
        android:button="@null"
        android:text="Perder Peso" />

    <RadioButton
        android:id="@+id/radioGanarPeso"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/radioPerderPeso"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:background="@drawable/green_bordersolid"
        android:button="@null"
        android:text="Ganar peso" />

</RelativeLayout>
